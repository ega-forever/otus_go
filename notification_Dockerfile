FROM golang:1.13 as builder

WORKDIR /app

COPY notification_service ./notification_service
COPY Makefile .
COPY go.mod .

RUN CGO_ENABLED=0 make build_notification

###

FROM ubuntu:18.04 as runner

WORKDIR /app
ENV REST_PORT=8080

COPY --from=builder /app/service_notification .
COPY .deploy/wait-for-it.sh .

EXPOSE 8080
CMD ["./service_notification", "scan"]